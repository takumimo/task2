<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan = "3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to 'Show',book_path(book) %></td>
				<td><%= link_to 'Edit',edit_book_path(book) %></td>
				<td><%= link_to 'Destroy',book_path(book), method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>

		<br>

		<h2>New book</h2>

		<%= form_for(@book) do |f| %>

			<h4>タイトル</h4>
			<%= f.text_field :title %>
			<h4>本文</h4>
			<%= f.text_area :body %>
			<%= f.submit 'Create Book' %>
		<% end %>