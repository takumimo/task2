<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan = "3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
			</tr>
		<% end %>
	</tbody>
</table>

		<br>

		<h2>New book</h2>

		<%= form_for(@book, url: '/new') do |f| %>
			<h4>タイトル</h4>
			<%= f.text_field :title %>
			<h4>本文</h4>
			<%= f.text_area :body %>
			<%= f.submit '投稿' %>
		<% end %>